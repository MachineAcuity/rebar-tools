{
  "name": "rebar-tools",
  "version": "3.0.0",
  "dependencies": {
    "chalk": "2.4.1",
    "del": "3.0.0",
    "ejs": "2.6.1",
    "nodegit": "0.23.0-alpha.1",
    "yargs": "12.0.2",
    "yargs-promise-handler": "1.0.2"
  },
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3"
  },
  "engines": {
    "node": ">=10.5.0",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "parser": "babylon",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "scripts": {
    "prettier": "./node_modules/.bin/prettier --write ./lib/*"
  },
  "preferGlobal": true,
  "bin": {
    "rebar": "lib/cli.js"
  },
  "description": "Tools for managing Rebar and Universal Relay Boilerplate applications",
  "author": "Code Foundries",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefoundries/rebar-tools.git"
  },
  "bugs": {
    "url": "https://github.com/codefoundries/rebar-tools/issues"
  },
  "homepage": "https://github.com/codefoundries/rebar-tools#readme"
}
