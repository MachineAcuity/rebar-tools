{
  "name": "rebar-tools",
  "version": "0.1.1",
  "dependencies": {
    "chalk": "2.1.0",
    "del": "3.0.0",
    "ejs": "2.5.7",
    "nodegit": "0.20.2",
    "yargs": "8.0.2",
    "yargs-promise-handler": "1.0.1"
  },
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "4.2.1",
    "prettier": "1.7.0"
  },
  "engines": {
    "node": "^8.3.0",
    "npm": "^5.0.0"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "parser": "babylon",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "scripts": {
    "prettier": "./node_modules/.bin/prettier --write ./lib/*"
  },
  "preferGlobal": true,
  "bin": {
    "rebar": "lib/cli.js"
  },
  "description": "Tools for managing Rebar and Universal Relay Boilerplate applications",
  "author": "Code Foundries",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefoundries/rebar-tools.git"
  },
  "bugs": {
    "url": "https://github.com/codefoundries/rebar-tools/issues"
  },
  "homepage": "https://github.com/codefoundries/rebar-tools#readme"
}
