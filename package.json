{
  "name": "rebar-tools",
  "version": "4.1.1",
  "dependencies": {
    "chalk": "2.4.2",
    "del": "5.1.0",
    "ejs": "2.7.1",
    "nodegit": "0.26.1",
    "yargs": "14.0.0",
    "yargs-promise-handler": "1.0.2"
  },
  "devDependencies": {
    "husky": "3.0.5",
    "lint-staged": "9.3.0",
    "prettier": "1.18.2"
  },
  "engines": {
    "node": ">=10.6.0",
    "npm": ">=6.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && lint-staged"
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "parser": "babylon",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "scripts": {
    "prettier": "./node_modules/.bin/prettier --write ./lib/*"
  },
  "preferGlobal": true,
  "bin": {
    "rebar": "lib/cli.js"
  },
  "description": "Tools for managing Rebar and Universal Relay Boilerplate applications",
  "author": "Code Foundries",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefoundries/rebar-tools.git"
  },
  "bugs": {
    "url": "https://github.com/codefoundries/rebar-tools/issues"
  },
  "homepage": "https://github.com/codefoundries/rebar-tools#readme"
}
